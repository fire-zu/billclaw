{
  "name": "@firela/billclaw-core",
  "version": "0.1.3",
  "description": "BillClaw Core - Framework-agnostic business logic for financial data import",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "oxlint",
    "format": "oxfmt src/",
    "format:write": "oxfmt -w src/",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "financial-data",
    "plaid",
    "gocardless",
    "banking",
    "transactions",
    "bills",
    "data-sovereignty"
  ],
  "author": "fire-la",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fire-la/billclaw.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/proper-lockfile": "^4.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "oxfmt": "^0.1.0",
    "oxlint": "^0.15.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0"
  },
  "optionalDependencies": {
    "keytar": "^6.0.1"
  },
  "dependencies": {
    "plaid": "^32.0.0",
    "proper-lockfile": "^4.1.2",
    "zod": "^3.25.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
