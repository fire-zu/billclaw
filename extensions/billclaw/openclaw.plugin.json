{
  "id": "billclaw",
  "uiHints": {
    "enabled": {
      "label": "Enable BillClaw"
    },
    "accounts": {
      "label": "Bank Accounts",
      "help": "Configure bank account connections for transaction import"
    },
    "plaid.clientId": {
      "label": "Plaid Client ID",
      "sensitive": true,
      "help": "Your Plaid application client ID"
    },
    "plaid.secret": {
      "label": "Plaid Secret",
      "sensitive": true,
      "help": "Your Plaid application secret"
    },
    "plaid.environment": {
      "label": "Plaid Environment",
      "help": "Select the appropriate environment for your Plaid integration"
    },
    "gmail.clientId": {
      "label": "Gmail OAuth Client ID",
      "sensitive": true,
      "help": "Your Google Cloud OAuth client ID for Gmail API access"
    },
    "gmail.clientSecret": {
      "label": "Gmail OAuth Client Secret",
      "sensitive": true,
      "help": "Your Google Cloud OAuth client secret"
    },
    "gmail.senderWhitelist": {
      "label": "Trusted Email Senders",
      "help": "Email addresses or domains that are trusted for bill detection (e.g., @netflix.com, billing@paypal.com)"
    },
    "gmail.keywords": {
      "label": "Bill Detection Keywords",
      "help": "Keywords that indicate an email contains a bill (e.g., invoice, statement, bill due)"
    },
    "gmail.pubsubTopic": {
      "label": "Gmail Pub/Sub Topic",
      "advanced": true,
      "help": "Google Cloud Pub/Sub topic for push notifications (e.g., projects/my-project/topics/my-topic)"
    },
    "storage.basePath": {
      "label": "Storage Base Path",
      "placeholder": "~/.openclaw/billclaw",
      "advanced": true,
      "help": "Local directory for storing transaction data"
    },
    "sync.frequencyMinutes": {
      "label": "Sync Frequency (minutes)",
      "placeholder": "60",
      "help": "How often to automatically sync transactions"
    },
    "sync.retryAttempts": {
      "label": "Retry Attempts",
      "advanced": true
    },
    "webhooks.hmacSecret": {
      "label": "Webhook HMAC Secret",
      "sensitive": true,
      "advanced": true,
      "help": "Shared secret for webhook signature verification"
    },
    "webhooks.url": {
      "label": "Webhook URL",
      "advanced": true
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "accounts": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique account identifier"
            },
            "name": {
              "type": "string",
              "description": "Display name for the account"
            },
            "type": {
              "type": "string",
              "enum": ["plaid", "gocardless", "gmail"],
              "description": "Account provider type"
            },
            "enabled": {
              "type": "boolean",
              "description": "Whether this account is active"
            },
            "plaidAccessToken": {
              "type": "string",
              "description": "Stored Plaid access token (encrypted)"
            },
            "plaidItemId": {
              "type": "string",
              "description": "Plaid item ID for this account"
            }
          },
          "required": ["id", "name", "type"]
        }
      },
      "plaid": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "clientId": {
            "type": "string",
            "description": "Plaid API client ID"
          },
          "secret": {
            "type": "string",
            "description": "Plaid API secret"
          },
          "environment": {
            "type": "string",
            "enum": ["sandbox", "development", "production"],
            "description": "Plaid API environment"
          }
        }
      },
      "gocardless": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "GoCardless access token"
          },
          "environment": {
            "type": "string",
            "enum": ["sandbox", "live"],
            "description": "GoCardless API environment"
          }
        }
      },
      "gmail": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "clientId": {
            "type": "string",
            "description": "Google Cloud OAuth client ID"
          },
          "clientSecret": {
            "type": "string",
            "description": "Google Cloud OAuth client secret"
          },
          "historyId": {
            "type": "string",
            "description": "Gmail history ID for tracking changes"
          },
          "pubsubTopic": {
            "type": "string",
            "description": "Google Cloud Pub/Sub topic for push notifications"
          },
          "senderWhitelist": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Trusted email addresses or domains for bill detection"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Keywords that indicate an email contains a bill"
          }
        }
      },
      "storage": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "basePath": {
            "type": "string",
            "description": "Base path for local data storage"
          }
        }
      },
      "sync": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "frequencyMinutes": {
            "type": "integer",
            "minimum": 1,
            "description": "Sync frequency in minutes"
          },
          "retryAttempts": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10,
            "description": "Number of retry attempts for failed syncs"
          },
          "deduplicationWindowHours": {
            "type": "integer",
            "minimum": 1,
            "maximum": 72,
            "description": "Deduplication window in hours"
          }
        }
      },
      "webhooks": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Webhook endpoint URL"
            },
            "hmacSecret": {
              "type": "string",
              "description": "HMAC secret for signature verification"
            },
            "enabled": {
              "type": "boolean",
              "description": "Whether this webhook is active"
            }
          },
          "required": ["url"]
        }
      }
    }
  }
}
